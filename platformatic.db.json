{
  "$schema": "./platformatic.db.schema.json",
  "server": {
    "hostname": "{PLT_SERVER_HOSTNAME}",
    "port": "{PORT}",
    "logger": {
      "level": "{PLT_SERVER_LOGGER_LEVEL}"
    },
    "cors": {
      "origin": "*",
      "preflightContinue": false,
      "optionsSuccessStatus": 204
    }
  },
  "core": {
    "connectionString": "{DATABASE_URL}",
    "graphql": true,
    "openapi": true
  },
  "migrations": {
    "dir": "migrations"
  },
  "plugin": {
    "path": "plugin.js"
  },
  "types": {
    "autogenerate": true
  }
}